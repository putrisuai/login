<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:columnCount="1"
    android:background="@drawable/gradient_a">

    <Button
        android:id="@+id/tampilForexButton"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_columnWeight="1"
        android:background="@android:color/transparent"
        android:drawableRight="@drawable/img_dollar_128"
        android:text="Forex"
        android:textColor="#fff"></Button>

    <Button
        android:id="@+id/tampilMahasiswaButton"
        android:layout_width="wrap_content"
        android:layout_height="92dp"
        android:layout_columnWeight="1"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/student"
        android:text="Master Mahasiswa"
        android:textColor="#fff">

    </Button>

    <Button
        android:id="@+id/tampilCuacaButton"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_columnWeight="1"
        android:background="@android:color/transparent"
        android:drawableRight="@drawable/img_weather_lightning_128"
        android:text="Cuaca"></Button>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_columnWeight="1"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/img_teenagers_128"
        android:text="Implicit Intent"
        android:id="@+id/tampilImplicitButton">
    </Button>

    <Button
        android:id="@+id/tampilTabLayoutButton"
        android:layout_width="wrap_content"
        android:layout_height="88dp"
        android:layout_columnWeight="1"
        android:background="@android:color/transparent"
        android:drawableRight="@drawable/img_teenagers_128"
        android:text="Tab Layout"></Button>

    <Button
        android:id="@+id/tampilHotelButton"
        android:layout_width="wrap_content"
        android:layout_height="91dp"
        android:layout_columnWeight="1"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/img_teenagers_128"
        android:text="HotelApp"></Button>

    <Button
        android:id="@+id/tampilWebLanjutanButton"
        android:layout_width="wrap_content"
        android:layout_height="107dp"
        android:layout_columnWeight="1"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/img_teenagers_128"
        android:text="Web Lanjutan"></Button>
</GridLayout>